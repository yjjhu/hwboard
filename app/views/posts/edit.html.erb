<%= render 'shared/title', title: "Edit" %>
<div class="btn-group btn-group-justified">
    <%= link_to '顯示', post_path(@post), class:"btn btn-primary" %>
    <%= link_to '編輯', edit_post_path(@post), class:"btn btn-primary disabled" %>
    <%= link_to '删除', post_path(@post), class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<%= render 'form', post:@post %>
